<h1>Odin Flights</h1>

<%= form_tag(flights_path, method: :get) do %>   
    <%= label_tag(:departure_airport_id, "From") %>
    <%= select_tag(:departure_airport_id, options_for_select(@airports),  include_blank: true)%>    
    <%= label_tag(:arrival_airport_id, "To") %>
    <%= select_tag(:arrival_airport_id, options_for_select(@airports),  include_blank: true)%>
    <%= label_tag(:start, "Date") %>
    <%= select_tag(:start, options_for_select(@start), include_blank: true)%>    
    <%= submit_tag("Search", name: nil) %>
<% end %>

<ul>
    <% if !@flights.empty? %>
        <% @flights.each do |flight| %>
            <li> <%= flight.id %>| <%= flight.departure_airport.name %> to <%= flight.arrival_airport.name %> | 
            <%= flight.duration %> minutes </li>
        <% end %>    
    <% else %>
        <h2>No flights for this selection</h2>
    <% end %>
</ul>