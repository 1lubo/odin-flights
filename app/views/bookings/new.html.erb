<h3 class="title is 3">Complete Booking</h3>
<%= render 'flights/show',  flight: @flight %>
<h4 class="title is 4">Passenger Details...</h4>

<div class="is-align-content-space-evenly">
    <%= form_with model: @booking do |f| %>
        <%= f.hidden_field :flight_id, value: @flight.id %>            
            <%= f.fields_for :passengers do |sub_form| %>
                <%= sub_form.hidden_field :id, value: nil %>
                <div class="is-align-content-space-evenly">
                    <div class="field is-horizontal is-justify-content-space-between">
                        <div class="field">
                            <p class="control has-icons-left is-expanded">
                                <%= sub_form.text_field :name,placeholder: "Passenger Name",class: "input is-large" %>
                                <span class="icon is-small is-left">
                                    <%= material_icon.contact_mail%>
                                </span>
                            </p>
                        </div>
                        <div class="field">
                            <p class="control has-icons-left is-expanded">
                                <%= sub_form.text_field :email,placeholder: "Passenger Email" ,class: "input is-large" %>
                                <span class="icon is-small is-left">
                                    <%= material_icon.mail%>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            <% end %>
        <%#end %>
        <br>
        <div class="level-item is-justify-content-space-between">
            <%= link_to 'Cancel Booking', root_path, class: "button is-link is-medium is-light"%>
            <%= f.submit class: "button is-link is-medium" %>            
        </div>
    <% end %>
</div>